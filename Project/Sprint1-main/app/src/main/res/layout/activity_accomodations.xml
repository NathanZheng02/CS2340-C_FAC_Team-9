<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AccomodationsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/accomodations_header_textView"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/background_dark"
            android:gravity="center"
            android:text="Accomodations Screen"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="BottomAppBar" />

    <Button
        android:id="@+id/button_home"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="19dp"
        android:backgroundTint="@color/darkgray"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bottomAppBar"
        android:layout_marginStart="12dp" />

    <Button
        android:id="@+id/button_logistics"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="19dp"
        android:backgroundTint="@color/darkgray"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_home"
        android:layout_marginStart="12dp" />

    <Button
        android:id="@+id/button_destination"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="19dp"
        android:text=""
        android:backgroundTint="@color/darkgray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_logistics"
        android:layout_marginStart="12dp" />

    <Button
        android:id="@+id/button_diningEstablishments"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="19dp"
        android:text=""
        android:backgroundTint="@color/darkgray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_destination"
        android:layout_marginStart="12dp" />

    <Button
        android:id="@+id/button_accommodations"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="19dp"
        android:text=""
        android:backgroundTint="@color/darkgray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_diningEstablishments"
        android:layout_marginStart="12dp" />

    <Button
        android:id="@+id/button_travelCommunity"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="19dp"
        android:text=""
        android:backgroundTint="@color/darkgray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_accommodations"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/text_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/button_home"
        app:layout_constraintEnd_toEndOf="@id/button_home"
        app:layout_constraintTop_toBottomOf="@id/button_home"
        tools:textSize="8sp" />

    <TextView
        android:id="@+id/text_logistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logistics"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/button_logistics"
        app:layout_constraintEnd_toEndOf="@id/button_logistics"
        app:layout_constraintTop_toBottomOf="@id/button_logistics"
        tools:textSize="8sp" />

    <TextView
        android:id="@+id/text_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/button_destination"
        app:layout_constraintEnd_toEndOf="@id/button_destination"
        app:layout_constraintTop_toBottomOf="@id/button_destination"
        tools:textSize="8sp" />

    <TextView
        android:id="@+id/text_diningEstablishments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dining\nEstablishments"
        android:textColor="@color/white"
        tools:textSize="8sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/button_diningEstablishments"
        app:layout_constraintEnd_toEndOf="@id/button_diningEstablishments"
        app:layout_constraintTop_toBottomOf="@id/button_diningEstablishments" />

    <TextView
        android:id="@+id/text_accommodations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accommodations"
        android:textColor="@color/white"
        tools:textSize="8sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/button_accommodations"
        app:layout_constraintEnd_toEndOf="@id/button_accommodations"
        app:layout_constraintTop_toBottomOf="@id/button_accommodations" />

    <TextView
        android:id="@+id/text_travelCommunity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Travel\nCommunity"
        android:textColor="@color/white"
        tools:textSize="8sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/button_travelCommunity"
        app:layout_constraintEnd_toEndOf="@id/button_travelCommunity"
        app:layout_constraintTop_toBottomOf="@id/button_travelCommunity" />

</androidx.constraintlayout.widget.ConstraintLayout>